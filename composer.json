{
    "minimum-stability": "dev",
    "name": "haijin/haiku",
    "description": "The most simple template engine possible, inspired in Ruby's Slim.",
    "keywords": ["html", "template"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/haijin-development/php-template",
    "authors": [
        {
            "name": "Haijin Development",
            "email": "haijin.development@gmail.com",
            "homepage": "https://github.com/haijin-development",
            "role": "developer"
        }
    ],
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "repositories": {
        "haijin/specs": {
            "type": "path",
            "url": "../php-specs",
            "options": {
            "symlink": true
            }
        },
        "haijin/tools": {
            "type": "path",
            "url": "../php-tools",
            "options": {
            "symlink": true
            }
        },
        "haijin/instantiator": {
            "type": "path",
            "url": "../php-instantiator",
            "options": {
            "symlink": true
            }
        },
        "haijin/parser": {
            "type": "path",
            "url": "../php-parser",
            "options": {
            "symlink": true
            }
        }
    },
    "require": {
        "haijin/tools": "dev-development",
        "haijin/instantiator": "dev-development",
        "haijin/parser": "dev-development"
    },
    "require-dev": {
        "haijin/specs": "dev-development"
    },
    "autoload": {
        "psr-4": {
            "Haijin\\Haiku\\": ["src/", "src/haiku-dom/", "src/errors/"]
        }
    },
    "scripts": {
        "specs": "php ./vendor/bin/specs"
    }
}